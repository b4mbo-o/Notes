import type { AstroBuiltinProps } from 'astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  ogImage?: string;
  pageType?: 'page' | 'post';
  slug?: string;
  published?: Date;
  updated?: Date;
  tags?: string[];
}

const {
  title = 'notes.b4mboo.net',
  description = '„É°„Ç§„É≥„Çµ„Ç§„Éà„ÅÆÈõ∞Âõ≤Ê∞ó„Çí„Åæ„Å®„Å£„Åü„É°„É¢„Éª„Éñ„É≠„Ç∞„ÅÆÁΩÆ„ÅçÂ†¥„ÄÇMarkdown „ÅßËøΩÂä†„Åß„Åç„Åæ„Åô„ÄÇ',
  lang = 'ja',
  ogImage = '/images/hero-notes.svg',
  pageType = 'page',
  slug,
  published,
  updated,
  tags = [],
}: Props = Astro.props as Props & AstroBuiltinProps;

const siteTitle = title === 'notes.b4mboo.net' ? title : `${title} | notes.b4mboo.net`;
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const siteUrl = Astro.site?.toString().replace(/\/$/, '') ?? 'https://notes.b4mboo.net';
const feedUrl = `${siteUrl}/feed`;
const ldBase = {
  '@context': 'https://schema.org',
  '@type': pageType === 'post' ? 'BlogPosting' : 'WebSite',
  headline: title,
  description,
  inLanguage: lang,
  url: canonical ?? siteUrl,
};
const ldArticle =
  pageType === 'post'
    ? {
        ...ldBase,
        '@type': 'BlogPosting',
        datePublished: published?.toISOString(),
        dateModified: (updated ?? published)?.toISOString(),
        image: ogImage ? [ogImage] : [],
        mainEntityOfPage: canonical ?? siteUrl,
        keywords: tags,
      }
    : ldBase;
